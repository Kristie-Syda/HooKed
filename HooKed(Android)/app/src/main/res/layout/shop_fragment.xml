<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shop"
        android:id="@+id/title"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_marginEnd="115dp"
        android:layout_marginTop="55dp"
        android:layout_toStartOf="@+id/lbl_coins" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Back"
        android:id="@+id/btn_sBack"
        android:background="#78482d"
        android:textColor="#fff"
        android:layout_marginEnd="53dp"
        android:layout_alignBottom="@+id/title"
        android:layout_toStartOf="@+id/title" />

    <GridView
        android:layout_width="370dp"
        android:layout_height="185dp"
        android:id="@+id/gridView1"
        android:numColumns="4"
        android:horizontalSpacing="10dp"
        android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_below="@+id/btn_sBack"
        android:layout_alignStart="@+id/btn_sBack"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coins:"
        android:id="@+id/lbl_coins"
        android:textColor="#000"
        android:layout_marginEnd="117dp"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coins"
        android:textColor="#000"
        android:text="Coins"
        android:layout_alignStart="@+id/lbl_coins"
        android:layout_gravity = "center"
        android:textAlignment="center"
        android:layout_below="@+id/lbl_coins"
        android:layout_alignEnd="@+id/lbl_coins" />

</RelativeLayout>