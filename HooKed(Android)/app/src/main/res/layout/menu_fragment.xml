<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu"
        android:id="@+id/mTitle"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn_logOut"
        android:layout_toEndOf="@+id/btn_logOut"
        android:layout_marginStart="115dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/btn_logOut"
        android:layout_marginStart="94dp"
        android:background="@drawable/logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />
    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/btn_play"
        android:background="@drawable/viewprof"
        android:layout_below="@+id/mTitle"
        android:layout_alignStart="@+id/btn_logOut" />
    <Button
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="Visit Shop"
        android:id="@+id/btn_shop"
        android:textColor="#fff"
        android:background="#78482d"
        android:layout_below="@+id/btn_play"
        android:layout_toEndOf="@+id/btn_play"
        android:layout_marginStart="63dp" />
    <Button
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="Achievements"
        android:id="@+id/btn_ach"
        android:textColor="#fff"
        android:background="#78482d"
        android:layout_below="@+id/btn_shop"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/btn_shop" />
    <Button
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="Leaderboard"
        android:id="@+id/btn_leader"
        android:textColor="#fff"
        android:background="#78482d"
        android:layout_below="@+id/btn_ach"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/btn_ach" />

</RelativeLayout>